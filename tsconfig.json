{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
